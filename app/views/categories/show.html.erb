<h1 class="text-center">Category: <%= @category.name %></h1>
<% if logged_in? && current_user.admin? %>
   <div class="text-center mt-2">
    <%= link_to 'edit', edit_category_path(@category), class: 'btn btn-success btn-sm' %>
   </div>
<%end%>

<!-- Articles belonging to this category -->
<div class="container">
  <div class="row">
    <% @category.articles.each do |article| %> <!-- Loop through the articles in the category -->
      <div class="col-md-4 mb-4"> <!-- Each card will take up 4 columns on medium-sized screens -->
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.description %></p>

            <!-- Display the categories for each article -->
            <div class="text-muted">
              <% article.categories.each do |category| %>
                <span class="badge bg-success"><%= category.name %></span>
              <% end %>
            </div>

            <div class="text-center">
              <%= link_to 'View', article_path(article), class: 'btn btn-success btn-sm' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
