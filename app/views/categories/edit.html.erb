<%= form_with(model: @category, local: true) do |form| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :name, class: 'control-label' %>
          <%= form.text_field :name, class: 'form-control form-control-sm', value: @category.name %>

          <!-- Display error messages for the name field -->
          <% if @category.errors[:name].any? %>
            <div class="text-danger mt-2">
              <ul>
                <% @category.errors[:name].each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.submit "Update Category", class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
