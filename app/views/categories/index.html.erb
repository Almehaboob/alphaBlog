<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h2 class="h5 mb-0">Available Categories</h2>
        </div>
        <div class="card-body">
          
          <!-- Add Category Button for Admin -->
          <% if current_user && current_user.admin? %>
            <div class="mb-3 text-end">
              <%= link_to "Add Category", new_category_path, class: "btn btn-success" %>
            </div>
          <% end %>

          <!-- Categories List -->
          <ul class="list-group">
            <% @categories.each do |category| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= link_to category.name, category_path(category), class: "text-decoration-none text-dark" %>
                <span class="badge bg-primary rounded-pill">no:0f artcle</span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <!-- Pagination Links -->
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @categories %>
      </div>
    </div>
  </div>
</div>
